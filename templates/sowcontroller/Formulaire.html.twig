{% extends 'base.html.twig' %}

{% block title %}osow page!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('formul.css') }}">
    <style>
        /* Ajout d'un style global */
        body.img {
            background-image: url('{{ asset('path_to_your_background_image.jpg') }}'); /* Ajoute ton image de fond */
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
        }

        /* Barre de navigation */
        .cc-navbar {
            background-color: #333;
            z-index: 10;
        }

        /* Section du formulaire */
        .contact {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Utilise toute la hauteur de la fenêtre */
            text-align: center;
            padding: 20px;
        }

        .contact h1 {
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: #fff;
        }

        .heading span {
            color: #ff6f61; /* Couleur du texte */
        }

        /* Formulaire centré */
        .contact form {
            background-color: rgba(255, 255, 255, 0.8); /* Fond blanc transparent */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        .contact input.box {
            width: 100%;
            padding: 15px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
        }

        .contact input.box:focus {
            outline: none;
            border-color: #ff6f61;
            box-shadow: 0 0 10px rgba(255, 111, 97, 0.5);
        }

        .contact a {
            text-decoration: none;
            color: #333;
            font-size: 16px;
            margin-top: 20px;
            display: inline-block;
            text-align: center;
        }

        .contact a img {
            border-radius: 10px;
            border: 2px solid rgb(97, 91, 89);
        }

        .contact a:hover {
            color: #ff6f61;
        }

        footer {
            text-align: center;
            position: fixed;
            bottom: 10px;
            width: 100%;
            color: #fff;
            background-color: #333;
            padding: 10px 0;
        }

    </style>
{% endblock %}

{% block body %}
<body class="img">
    <!-- Barre de navigation -->
    

    <!-- Espace pour la barre de navigation fixe -->
    <br><br><br><br><br>

    <!-- Section du formulaire -->
    <section class="contact" id="contact">
        <div>
            <h1 class="heading"><span>Formulaire</span></h1>
            <form id="contactForm">
                <input type="text" placeholder="Nom" id="name" class="box" required>
                <input type="email" placeholder="Email" id="email" class="box" required>
                <input type="tel" placeholder="Téléphone" id="phone" class="box" required>
                <p class="nav-item pe-4">
                    <a href="#" id="cvLink" style="text-decoration: none; color: #333333;">
                        <img src="{{ asset('image/cv.jpg') }}" alt="Eportfolio" 
                             style="width: 100px; height: 100px; border: 2px solid rgb(97, 91, 89); border-radius: 10px;">
                        <h3>Pour Télécharger le CV cliquez sur la photo</h3>
                    </a>
                </p>
            </form>
        </div>
    </section>

    <!-- Pied de page -->
    <footer>
        copyright &copy; 2025 oumar.sow site privé
    </footer>

    <!-- Script JavaScript -->
    <script>
        // Fonction pour valider le formulaire
        function validateForm(event) {
            const name = document.getElementById("name").value;
            const email = document.getElementById("email").value;
            const phone = document.getElementById("phone").value;

            if (!name || !email || !phone) {
                // Si le formulaire n'est pas valide, on empêche la navigation
                event.preventDefault(); // Empêche le comportement par défaut du lien
                alert("Veuillez remplir tous les champs du formulaire avant d'accéder au CV.");
            } else {
                // Si le formulaire est valide, on permet la navigation
                window.location.href = "/monCV"; // Redirige vers la page du CV
            }
        }

        // Ajout d'un écouteur d'événement sur le lien du CV
        document.getElementById("cvLink").addEventListener("click", validateForm);
    </script>
</body>
{% endblock %}
