    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script>
        // Fonction pour télécharger le CV en PDF
        function downloadPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF('p', 'mm', 'a4'); // Crée un document PDF en format A4

            // On récupère le contenu de la div contenant le CV
            const content = document.querySelector(".cv-container");

            // Convertir le contenu HTML en image avec html2canvas
            html2canvas(content, { scale: 2 }).then((canvas) => {
                const imgData = canvas.toDataURL('image/png'); // Convertir l'image en base64
                const imgWidth = 210; // Largeur de la page A4 en mm
                const imgHeight = (canvas.height * imgWidth) / canvas.width; // Calculer la hauteur proportionnelle

                // Ajouter l'image au PDF
                doc.addImage(imgData, 'PNG', 0, 0, imgWidth, imgHeight);

                // Télécharger le PDF
                doc.save("cv-oumarsow.pdf");
            });
        }
    </script>
