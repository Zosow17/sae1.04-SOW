{% extends 'base.html.twig' %}

{% block title %}Mon CV - Oumar Sow{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('cv.css') }}">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            color: #333;
        }
        h1 {
            text-align: center;
            margin-top: 50px;
            font-size: 2.5em;
            color: #2c3e50;
        }
        .cv-container {
            max-width: 960px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        .embed-container {
            text-align: center;
            margin-bottom: 30px;
        }
        embed {
            border-radius: 8px;
            border: 1px solid #ddd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .download-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 24px;
            background-color: #3498db;
            color: white;
            font-size: 1.2em;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .download-btn:hover {
            background-color: #2980b9;
        }
        footer {
            text-align: center;
            font-size: 1em;
            margin-top: 50px;
            color: #7f8c8d;
        }
        footer .glyphicon {
            margin-left: 5px;
            color: #3498db;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="cv-container">
        <h1>Mon CV</h1>

        <!-- Intégration du PDF dans la page -->
        <div class="embed-container">
            <embed src="{{ asset('cv.pdf') }}" width="100%" height="600px" />
        </div>

        <div style="text-align: center;">
            <!-- Bouton pour télécharger le CV en PDF -->
            <a href="{{ asset('cv.pdf') }}" download="Mon_CV.pdf" class="download-btn">
                Télécharger le CV en PDF
            </a>
        </div>
    </div>
    
    <footer>
        Copyright <span class="glyphicon glyphicon-nom-image"></span> 2025 Oumar.sow - Site privé
    </footer>
{% endblock %}
